#!/bin/bash

WAL_DIR="$HOME/.cache/wal"
COLORS_FILE="$WAL_DIR/colors.css"
OUTPUT_FILE="$WAL_DIR/readability.css"

if [ ! -f "$COLORS_FILE" ]; then
  echo "Error: $COLORS_FILE not found."
  exit 1
fi

cat >"$OUTPUT_FILE" <<EOF
@import url("file://$COLORS_FILE");

/* Readability theme using pywal variables */

body {
  background-color: var(--background);
  color: var(--foreground);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", sans-serif;
  font-size: 18px;
  line-height: 1.75;
  max-width: 70ch;
  margin: 2em auto;
  padding: 2em;
}

a {
  color: var(--color4);
  text-decoration: underline;
}

a:visited {
  color: var(--color5);
}

a:hover, a:focus {
  color: var(--color6);
  background-color: var(--color0);
}

h1, h2, h3, h4, h5, h6 {
  color: var(--color2);
  margin-top: 2em;
  margin-bottom: 1em;
  font-weight: 600;
}

pre, code {
  background-color: var(--color0);
  color: var(--color6);
  padding: 0.3em 0.5em;
  border-radius: 4px;
  font-family: Menlo, Monaco, Consolas, monospace;
  font-size: 0.95em;
  overflow-x: auto;
}

blockquote {
  border-left: 4px solid var(--color4);
  padding-left: 1em;
  margin-left: 0;
  color: var(--color6);
  font-style: italic;
}

img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 1em auto;
}
EOF

echo "âœ… Generated readability stylesheet with pywal colors at: $OUTPUT_FILE"
